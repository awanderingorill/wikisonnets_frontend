.header-wrapper(ui-view='header')
.poem-body
	.left-sidebar
		.left-poem(ng-show="poem.next")
			span.left-poem__title(ng-click="goToPoem(poem.next.poem_id)") {{poem.next.page_name | removeUnderscores}}
	.poem
		.poem__image-wrapper
			img.poem__image(src="{{poem.imageUrl}}")
		.poem__title-form
			angucomplete-alt(placeholder="Enter a Wikipedia article" id="poem-title" pause="100" remote-url="/api/search?q=" input-class="poem__title" selected-object="createPoem" minlength="1" title-field="title" initial-value="poem.title")
		p.poem__lines
			poem-line.poem__line-wrapper(ng-repeat="line in poem.lines")
	.right-sidebar
		.right-poem(ng-show="poem.previous")
			span.right-poem__title(ng-click="goToPoem(poem.previous.poem_id)" ng-show="poem.previous") {{poem.previous.page_name | removeUnderscores}}

